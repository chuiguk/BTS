@model List<BugTrackingSystem.Data.Model.Bug>

<body>
    <div class="general-container marginFromMenu">
        <div class="row">
            <div class="col-lg-3 padding0">
                <h2 style="margin-bottom: 40px;">
                    <b>My projects</b>
                </h2>
                @Html.Action("MyProjects", "Home")

                <div class="container col-lg-12">
                    <a href="#" id="ShowAllMyProjects">Show all<i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                </div>
            </div>
            
            <div class="col-lg-7 col-lg-offset-1">
                <h2>
                    <b>Assigned to me</b>
                </h2>
                <div class="col-xs-12">
                    <nav class="local-pagination">
                        <ul class="pagination pagination-sm">
                            <li><a href="#">1</a></li>
                            
                        </ul>
                    </nav>
                </div>


                <div id="UniversalTable" class="marginFromMenu">
                    @foreach (var item in @Model)
                    {
                        <div class="TableRowInfo">
                            <div class="IconElement col-lg-1 padding0">
                                <img src="~/Content/Images/PriorityMinor.png" class="img-priority img-responsive">
                            </div>
                            <div class="ProjectInfo">
                                <div class="ProjectPrefix">
                                    TDF-@item.Number
                                    <span class="BugStatus ToDo">
                                        To do
                                    </span>
                                </div>
                                <div class="ElementText">
                                    @item.Subject
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</body>
