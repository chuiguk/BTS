@model List<BugTrackingSystem.Data.Model.Filter>
@{
    ViewBag.Title = "Filters";
}


<div class="col-lg-12 general-container">
    <div id="header" class="row">
        <div id="headerTitle" class="col-lg-2">
            Filters
            <i class="fa fa-plus round" aria-hidden="true"></i>
        </div>

        <div class="pull-right" id="Local-search">
            <div id="imaginary_container">
                <div class="input-group stylish-input-group">
                    <input type="text" class="form-control" placeholder="Search">
                    <span class="input-group-addon">
                        <button type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>

    </div>
    <div class="row Sort_Title_Pagination">
        <div class="sticker-properties" id="SortBy">
            <span class="sticker-properties">Sort by:</span>
        </div>
        <div class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Title <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                <li><a href="#">Project</a></li>
                <li><a href="#">Assignee</a></li>
                <li><a href="#">Status</a></li>
                <li><a href="#">Priority</a></li>
            </ul>
        </div>
        <div class=" pull-right">
            <span class="pull-left">
                1
            </span>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-4 block">
                <i class="fa fa-times-circle" aria-hidden="true"></i>
                <div class="custom-sticker">
                    <h4><b>@item.Title</b></h4>
                    <div class="row">
                        <span class="col-lg-12">
                            <span class="sticker-properties">Search:</span>@item.Search <br />
                        </span>
                        <span class="col-lg-6">
                            <span class="sticker-properties"> Status: </span>@item.Status
                        </span>
                        <span class="col-lg-6">
                            <span class="sticker-properties"> Project: </span>@item.Project
                        </span>
                        <span class="col-lg-6">
                            <span class="sticker-properties"> Priority: </span>@item.BugPriority
                        </span>
                        <span class="col-lg-6">
                            <span class="sticker-properties"> Assignee: </span>@item.AssignedUser
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row Sort_Title_Pagination">
        <i class="fa fa-filter col-lg-2" aria-hidden="true" style="font-size: 18px;"> Filters: @Model.Count</i>
        <div class=" pull-right">
            <span class="pull-left">
                1
            </span>
        </div>
    </div>
</div>
<script type="text/javascript">

    $(".custom-sticker").click(function () {
        alert("farafa");
        $(this).next(".fa-times-circle").toggle();
    });

    $(document).ready(function () {
        $(".dropdown").hover(
            function () {
                $('.dropdown-menu', this).not('.in .dropdown-menu').stop(true, true).slideDown("fast");
                $(this).toggleClass('open');
            },
            function () {
                $('.dropdown-menu', this).not('.in .dropdown-menu').stop(true, true).slideUp("fast");
                $(this).toggleClass('open');
            }
        );
    });
</script>
